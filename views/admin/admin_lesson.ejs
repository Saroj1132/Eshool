<%- include('./Partials/header.ejs') %>



<div class="col-sm-9 mt-5 mx-3">
    <form action="/admin/admin_lesson" class="mt-3 form-inline d-print-none" id="course" method="post">
        <div class="form-group mr-3">
            <label for="Course Name" class="pl-2 font-weight-bold">Enter Course Name:</label>
            <input id="course_name" class="form-control ml-3" type="text" name="course_name">
        </div>
        <button type="submit" class="btn btn-danger">Search</button>
    </form>
    <% if(result=="true") { %>
        <%record.forEach(function(p){ %>
            <h3 class="mt-5 bg-dark text-white p-2">Course Name: <%=p.course_name%></h3>
        
        <% }) %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Lesson Id</th>
                        <th scope="col">Lesson Name</th>
                        <th scope="col">Lesson Link</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <%lesson.forEach(function(p){ %>
                        <tr>
                            <th scope="row"><%=p._id%></th>
                            <td><%=p.lesson_name%></td>
                            <td><%=p.lesson_link%></td>
                            <td><a href="/admin/admin_edit_Lesson/<%=p._id%>" class="btn btn-info mr-3" name="view" id="view"
                                value="View"><i class="fas fa-pen" aria-hidden="true"></i></a>
                                <a href="/admin/admin_delete_Lesson/<%=p._id%>" class="btn btn-secondary" name="delete" id="delete"
                                value="Delete"><i class="far fa-trash-alt" aria-hidden="true"></i></a>
                            </td>
                        
                            </tr>
                        <% }) %>
                </tbody>
            </table>
    <% } %>
    

</div>

<% if(result=="true") {%>

<div>
    <a href="/admin/admin_add_Lesson" class="btn btn-danger box">
        <i class="fas fa-plus fa-2x"></i>
    </a>
</div>

<% } %>

<%- include('./Partials/Footer.ejs') %>
 
<script>
    $("#course").validate({
    rules: {
        
        
        course_name: {
            required: true,
        }
    },
    messages: {
      
        
        course_name: {
            required: "Please enter your Course name"
        }
    }
    
  });
  </script>
  