            <i class="fas fa-user" aria-hidden="true"></i>                
            <label for="Sname" class="pl-2 font-weight-bold">Name</label> &nbsp;&nbsp;<small id="vmsg1"></small>
            <input type="text" class="form-control" name="studregname" id="studregname">
          </div>
          
          <div class="form-group">
            <i class="fas fa-envelope" aria-hidden="true"></i>                
            <label for="email" class="pl-2 font-weight-bold">Email</label> &nbsp;&nbsp;<small id="vmsg2"></small>
            <input type="text" class="form-control" name="studregemail" id="studregemail">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <i class="fas fa-key" aria-hidden="true"></i>                
            <label for="password" class="pl-2 font-weight-bold">Password</label>  &nbsp;&nbsp;<small id="vmsg3"></small>
            <input type="password" class="form-control" name="studregpassword" id="studregpassword">
          </div>
            <span id="messagereg"></span>
            <button type="button" onclick="studreg()" id="signup" class="btn btn-primary">Signup</button>
        </form>

      </div>
    </div>
