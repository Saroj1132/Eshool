            <button type="button" onclick="studlogin()" class="btn btn-primary">Login</button>

        </form>

      </div>
      <div class="col-md-6 offset-md-1">
        <h5 class="mb-3">New User || Signup</h5>
        <form action="/StudentRegistraion" method="post" id="studreg">
