        <h5 class="mb-3">If Already Registred || Login</h5>
        <form action="/Studentlogin" method="post">
              
          <div class="form-group">
            <i class="fas fa-envelope" aria-hidden="true"></i>                
            <label for="email" class="pl-2 font-weight-bold">Email</label> &nbsp;&nbsp;<small id="smsg1"></small>
            <input type="text" id="studlogemail" class="form-control" name="studlogemail">
