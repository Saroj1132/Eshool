<%- include('./Partials/header.ejs') %>


<!-- Start Course Page Banner -->

<div class="container-fluid bg-dark">
    <div class="row">
        <img src="https://img.rawpixel.com/s3fs-private/rawpixel_images/website_content/tp215-k-pf-coke-1213-01e.jpg?w=1200&h=1200&dpr=1&fit=clip&crop=default&fm=jpg&q=75&vib=3&con=3&usm=15&cs=srgb&bg=F4F4F3&ixlib=js-2.2.1&s=a22c03ff9d29dbb3dd80ff755e7ce459" 
        alt="courses" 
        style="height: 500px; width: 100%; object-fit: cover;
        box-shadow: 10px;"/>
    </div>
</div>

<!-- End Course Page Banner -->

  <!-- start course detail -->

  <div class="container mt-5">
    <%record.forEach(function(p){ %>
      <div class="row">
      <div class="col-md-4">
        <img src="/images/<%=p.course_img%>" class="card-img-top" alt="">
      </div>
      <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Course Name: <%=p.course_name%></h5>
            <p class="card-text">Description: <%=p.course_desc%></p>
            <p class="card-text">Duration : <%=p.course_duration%></p>
            <form action="/Course_Checkout/<%=p._id%>" method="post">
              <p class="card-text d-inline">Price: <small><del>&#8377 <%=p.course_original_price%></del></small>
                <span class="font-weight-bolder">&#8377 <%=p.course_price%></span>
              </p>
              <input type="hidden" name="course_price" value="<%=p.course_price%>">
              <button type="submit" class="btn btn-primary text-white
              font-weight-bolder float-right" name="buy">Buy Now</button>
            </form>
          </div>
        </div>
      </div>
    <% })%>
      <div class="container">
        <div class="row">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th scope="col">Lesson No.</th>
                <th scope="col">Lesson Name</th>
              </tr>
            </thead>
            <tbody>
              <%lesson.forEach(function(p){ %>
                <tr>
                  <th scope="row" class="count"></th>
                  <td><%=p.lesson_name%></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- end Course Detail -->
 
<%- include('./Partials/Footer.ejs') %>
